<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ardananjungkusuma.pokelove">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ElementDetailActivity"></activity>
        <activity android:name=".ElementActivity" />
        <activity android:name=".SnorlaxGameActivity" />
        <activity android:name=".BallDetailActivity" />
        <activity android:name=".BallActivity" />
        <activity android:name=".ElementChart" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".PokemonActivity" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>